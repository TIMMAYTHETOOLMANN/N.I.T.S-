# NITS Environment Configuration
# Copy this file to .env and customize for your environment

# OpenAI API Key for AI Investigator Module
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# GovInfo API Key (optional)
# Get your API key from: https://www.govinfo.gov/api-signup
GOVINFO_API_KEY=DEMO_KEY_EMBEDDED_FALLBACK

# System Configuration (from DEPLOYMENT_FIX_GUIDE.md)
DOSSIER_PATH=./master_dossier.json
OUTPUT_DIR=./output
LOG_LEVEL=INFO

# Rate Limiting (FIX #7)
MAX_API_REQUESTS_PER_MINUTE=60

# Processing Configuration
ENABLE_CORPUS_ANALYSIS=true
ENABLE_DETAILED_LOGGING=true

# Stealth Proxy Configuration (NO CHROMIUM - NO HEADLESS MODE)
PROXY_ENABLED=true
PROXY_COUNTRY=US
PROXY_LIMIT=30
PROXY_TIMEOUT=15
PROXY_MAX_RETRIES=6
PROXY_MIN_DELAY=1.0
PROXY_MAX_DELAY=4.0

# Provider Proxy API (Optional - Recommended for production)
# Get proxies from: https://www.webshare.io, https://brightdata.com, etc.
PROXY_PROVIDER_API_URL=
PROXY_PROVIDER_API_KEY=

# Browser Configuration (PERMANENT HEADLESS DISABLED)
NO_HEADLESS=true
NO_BROWSER=true
NO_CHROMIUM=true
